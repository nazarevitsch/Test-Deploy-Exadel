<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xmlns:pro="http://www.liquibase.org/xml/ns/pro"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd"
>
    <changeSet id="create_used_discount_table" author="nazarii">
        <createTable tableName="used_discount">
            <column defaultValueComputed="uuid_generate_v4()" name="ud_id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_used_discount"/>
            </column>
            <column name="ud_discount_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="ud_user_id" type="UUID">
                <constraints nullable="false" />
            </column>
            <column name="ud_usage_date" type="timestamptz"/>
        </createTable>
    </changeSet>

    <changeSet author="nazar" id="set-used_discount-foreign-key-1">
        <addForeignKeyConstraint baseColumnNames="ud_discount_id" baseTableName="used_discount" constraintName="fk_used_discount_ud_discount_id" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="d_id" referencedTableName="discount" validate="true"/>
    </changeSet>
    <changeSet author="nazar" id="set-used_discount-foreign-key-2">
        <addForeignKeyConstraint baseColumnNames="ud_user_id" baseTableName="used_discount" constraintName="fk_used_discount_ud_user_id" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="u_id" referencedTableName="users" validate="true"/>
    </changeSet>
</databaseChangeLog>